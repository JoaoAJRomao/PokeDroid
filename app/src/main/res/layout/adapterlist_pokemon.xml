<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="75dp"
            android:layout_height="55dp" app:srcCompat="@drawable/funnycat"
            android:id="@+id/itemAdapter-imageView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="NomePokemon"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:id="@+id/itemAdapter-textView"
            android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/itemAdapter-imageView"
            app:layout_constraintBottom_toBottomOf="@+id/itemAdapter-imageView"
            app:layout_constraintTop_toTopOf="@+id/itemAdapter-imageView" android:layout_marginStart="20dp"/>
</android.support.constraint.ConstraintLayout>