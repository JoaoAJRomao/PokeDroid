<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="8dp">
    <ImageView
            android:layout_width="75dp"
            android:layout_height="55dp" app:srcCompat="@drawable/funnycat"
            android:id="@+id/imagemPokemon"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:contentDescription="TextImage" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:id="@+id/nomePokemon"
            android:textAlignment="center" android:textStyle="bold|italic" android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imagemPokemon"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/imagemPokemon"
            app:layout_constraintTop_toTopOf="@+id/imagemPokemon" android:layout_marginStart="36dp"
            android:text="nomePokemon" app:layout_constraintVertical_bias="0.555"/>
</android.support.constraint.ConstraintLayout>