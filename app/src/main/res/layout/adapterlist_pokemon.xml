<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="8dp">
    <TextView
            android:text="@string/xmlNomePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nomePokemon"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/imagemPokemon" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="86dp"
    />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/funnycat"
            android:id="@+id/imagemPokemon"
            app:layout_constraintEnd_toStartOf="@+id/nomePokemon" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="64dp"
            android:contentDescription="@string/descricaoImagem"/>
</android.support.constraint.ConstraintLayout>