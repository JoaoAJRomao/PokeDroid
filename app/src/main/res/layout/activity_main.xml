<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_codeId"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="112dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_id"
            app:layout_constraintStart_toStartOf="@+id/main_codeId" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/main_codeId"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_name"
            app:layout_constraintStart_toStartOf="@+id/main_id" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/main_id"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_baseExperience"
            app:layout_constraintStart_toStartOf="@+id/main_name" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/main_name"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_height"
            app:layout_constraintStart_toStartOf="@+id/main_baseExperience" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/main_baseExperience"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_abilities"
            app:layout_constraintStart_toStartOf="@+id/main_height" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/main_height"/>
</android.support.constraint.ConstraintLayout>